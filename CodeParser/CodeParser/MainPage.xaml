<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Введите код"
             x:Class="CodeParser.MainPage">

    <Grid RowDefinitions="*" ColumnDefinitions="*">
        <Frame Grid.Column="0" Grid.Row="0" BackgroundColor="DarkOrange" CornerRadius="5" Margin="10">
            <Grid RowDefinitions="8*,*" ColumnDefinitions="*" RowSpacing="10" Margin="10">
                <Editor x:Name="editor" 
                        FontFamily="consolas" 
                        FontSize="16" 
                        Grid.Row="0" 
                        Grid.Column="0" 
                        Placeholder="Вставьте или напишите ваш код здесь"
                        BackgroundColor="White"/>
                <Button 
                    Text="Парсить" 
                    Grid.Row="1" 
                    Grid.Column="0" 
                    HorizontalOptions="Center" 
                    VerticalOptions="Center" 
                    WidthRequest="200" 
                    HeightRequest="50" 
                    BackgroundColor="Orange"
                    BorderColor="Black"
                    BorderWidth="1"
                    TextColor="Black"
                    FontAttributes="Bold"
                    FontSize="18"
                    Clicked="Button_Clicked"/>
                <Picker
                    x:Name="metrics_picker"
                    ItemsSource="{Binding}"
                    Grid.Row="1"
                    Grid.Column="0"
                    HorizontalOptions="Start" 
                    VerticalOptions="Center"
                    MinimumWidthRequest="200"
                    BackgroundColor="White"/>
            </Grid>
        </Frame>
    </Grid>

</ContentPage>
